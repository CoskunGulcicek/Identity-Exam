@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserList</h1>


<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>
        
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <rolgoster user-id="@item.Id"></rolgoster>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                    <a asp-action="AddClaim" asp-controller="Famale" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Claim Ekle</a>
                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td>Sistemde Kullanıcı Yoktur</td>
        </tr>
    }

</table>